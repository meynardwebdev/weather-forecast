{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

    <div class="py-5">
        <div class="card">
            <div class="card-header">
                <h1>Weather Forecast</h1>
            </div>
            <div class="card-body">
                <form action="" method="POST">
                    {% if form_errors(form) %}
                        <div class="alert alert-error">
                            {{- form_errors(form) -}}
                        </div>
                    {% endif %}
                    {{ form_row(form._token) }}

                    {% if city is not null and country is not null %}
                    <div class="alert alert-success">
                        Current Temperature in {{ city ~ ', ' ~ country }} is <strong>{{ temperature }}</strong>
                    </div>
                    {% endif %}

                    <div class="mb-3">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.country) }}
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
